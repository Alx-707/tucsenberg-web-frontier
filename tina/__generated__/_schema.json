{
  "version": {
    "fullVersion": "1.6.1",
    "major": "1",
    "minor": "6",
    "patch": "1"
  },
  "meta": { "flags": ["experimentalData"] },
  "collections": [
    {
      "name": "posts",
      "label": "Blog Posts",
      "path": "content/posts",
      "format": "mdx",
      "match": { "include": "{en,zh}/**/*" },
      "fields": [
        {
          "type": "string",
          "name": "locale",
          "label": "Language",
          "options": [
            { "value": "en", "label": "English" },
            { "value": "zh", "label": "中文" }
          ],
          "required": true,
          "ui": { "component": "select" },
          "namespace": ["posts", "locale"],
          "searchable": true,
          "uid": false
        },
        {
          "type": "string",
          "name": "title",
          "label": "Title",
          "isTitle": true,
          "required": true,
          "namespace": ["posts", "title"],
          "searchable": true,
          "uid": false
        },
        {
          "type": "string",
          "name": "description",
          "label": "Description",
          "required": true,
          "ui": { "component": "textarea" },
          "namespace": ["posts", "description"],
          "searchable": true,
          "uid": false
        },
        {
          "type": "string",
          "name": "slug",
          "label": "Slug",
          "required": true,
          "description": "URL-friendly version of the title",
          "namespace": ["posts", "slug"],
          "searchable": true,
          "uid": false
        },
        {
          "type": "datetime",
          "name": "publishedAt",
          "label": "Published Date",
          "required": true,
          "ui": { "dateFormat": "YYYY-MM-DD" },
          "namespace": ["posts", "publishedAt"],
          "searchable": true,
          "uid": false
        },
        {
          "type": "datetime",
          "name": "updatedAt",
          "label": "Updated Date",
          "ui": { "dateFormat": "YYYY-MM-DD" },
          "namespace": ["posts", "updatedAt"],
          "searchable": true,
          "uid": false
        },
        {
          "type": "string",
          "name": "author",
          "label": "Author",
          "required": true,
          "options": [
            "Tucsenberg Team",
            "Technical Team",
            "Marketing Team",
            "Product Team"
          ],
          "namespace": ["posts", "author"],
          "searchable": true,
          "uid": false
        },
        {
          "type": "string",
          "name": "tags",
          "label": "Tags",
          "list": true,
          "ui": { "component": "tags" },
          "namespace": ["posts", "tags"],
          "searchable": true,
          "uid": false
        },
        {
          "type": "string",
          "name": "categories",
          "label": "Categories",
          "list": true,
          "options": [
            "Technology",
            "Web Development",
            "Enterprise",
            "Tutorial",
            "News",
            "Case Study"
          ],
          "namespace": ["posts", "categories"],
          "searchable": true,
          "uid": false
        },
        {
          "type": "boolean",
          "name": "featured",
          "label": "Featured Post",
          "description": "Show this post in featured sections",
          "namespace": ["posts", "featured"],
          "searchable": true,
          "uid": false
        },
        {
          "type": "boolean",
          "name": "draft",
          "label": "Draft",
          "description": "Hide this post from public view",
          "namespace": ["posts", "draft"],
          "searchable": true,
          "uid": false
        },
        {
          "type": "string",
          "name": "excerpt",
          "label": "Excerpt",
          "ui": { "component": "textarea" },
          "description": "Brief summary of the post",
          "namespace": ["posts", "excerpt"],
          "searchable": true,
          "uid": false
        },
        {
          "type": "number",
          "name": "readingTime",
          "label": "Reading Time (minutes)",
          "description": "Estimated reading time in minutes",
          "namespace": ["posts", "readingTime"],
          "searchable": true,
          "uid": false
        },
        {
          "type": "image",
          "name": "coverImage",
          "label": "Cover Image",
          "description": "Main image for the post",
          "namespace": ["posts", "coverImage"],
          "searchable": false,
          "uid": false
        },
        {
          "type": "object",
          "name": "seo",
          "label": "SEO Settings",
          "fields": [
            {
              "type": "string",
              "name": "title",
              "label": "SEO Title",
              "description": "Override the default title for SEO",
              "namespace": ["posts", "seo", "title"],
              "searchable": true,
              "uid": false
            },
            {
              "type": "string",
              "name": "description",
              "label": "SEO Description",
              "description": "Meta description for search engines",
              "ui": { "component": "textarea" },
              "namespace": ["posts", "seo", "description"],
              "searchable": true,
              "uid": false
            },
            {
              "type": "string",
              "name": "keywords",
              "label": "SEO Keywords",
              "list": true,
              "description": "Keywords for search engines",
              "namespace": ["posts", "seo", "keywords"],
              "searchable": true,
              "uid": false
            },
            {
              "type": "image",
              "name": "ogImage",
              "label": "Open Graph Image",
              "description": "Image for social media sharing",
              "namespace": ["posts", "seo", "ogImage"],
              "searchable": false,
              "uid": false
            }
          ],
          "namespace": ["posts", "seo"],
          "searchable": true,
          "uid": false
        },
        {
          "type": "rich-text",
          "name": "body",
          "label": "Content",
          "isBody": true,
          "templates": [
            {
              "name": "CodeBlock",
              "label": "Code Block",
              "fields": [
                {
                  "type": "string",
                  "name": "language",
                  "label": "Language",
                  "options": [
                    "typescript",
                    "javascript",
                    "jsx",
                    "tsx",
                    "css",
                    "html",
                    "bash",
                    "json"
                  ],
                  "namespace": ["posts", "body", "CodeBlock", "language"],
                  "searchable": true,
                  "uid": false
                },
                {
                  "type": "string",
                  "name": "code",
                  "label": "Code",
                  "ui": { "component": "textarea" },
                  "namespace": ["posts", "body", "CodeBlock", "code"],
                  "searchable": true,
                  "uid": false
                }
              ],
              "namespace": ["posts", "body", "CodeBlock"]
            },
            {
              "name": "Callout",
              "label": "Callout",
              "fields": [
                {
                  "type": "string",
                  "name": "type",
                  "label": "Type",
                  "options": ["info", "warning", "error", "success"],
                  "namespace": ["posts", "body", "Callout", "type"],
                  "searchable": true,
                  "uid": false
                },
                {
                  "type": "string",
                  "name": "title",
                  "label": "Title",
                  "namespace": ["posts", "body", "Callout", "title"],
                  "searchable": true,
                  "uid": false
                },
                {
                  "type": "rich-text",
                  "name": "content",
                  "label": "Content",
                  "namespace": ["posts", "body", "Callout", "content"],
                  "searchable": true,
                  "parser": { "type": "mdx" },
                  "uid": false
                }
              ],
              "namespace": ["posts", "body", "Callout"]
            }
          ],
          "namespace": ["posts", "body"],
          "searchable": true,
          "parser": { "type": "mdx" },
          "uid": false
        }
      ],
      "ui": { "filename": { "readonly": false } },
      "namespace": ["posts"]
    },
    {
      "name": "pages",
      "label": "Pages",
      "path": "content/pages",
      "format": "mdx",
      "match": { "include": "{en,zh}/**/*" },
      "fields": [
        {
          "type": "string",
          "name": "locale",
          "label": "Language",
          "options": [
            { "value": "en", "label": "English" },
            { "value": "zh", "label": "中文" }
          ],
          "required": true,
          "ui": { "component": "select" },
          "namespace": ["pages", "locale"],
          "searchable": true,
          "uid": false
        },
        {
          "type": "string",
          "name": "title",
          "label": "Title",
          "isTitle": true,
          "required": true,
          "namespace": ["pages", "title"],
          "searchable": true,
          "uid": false
        },
        {
          "type": "string",
          "name": "description",
          "label": "Description",
          "required": true,
          "ui": { "component": "textarea" },
          "namespace": ["pages", "description"],
          "searchable": true,
          "uid": false
        },
        {
          "type": "string",
          "name": "slug",
          "label": "Slug",
          "required": true,
          "namespace": ["pages", "slug"],
          "searchable": true,
          "uid": false
        },
        {
          "type": "datetime",
          "name": "publishedAt",
          "label": "Published Date",
          "ui": { "dateFormat": "YYYY-MM-DD" },
          "namespace": ["pages", "publishedAt"],
          "searchable": true,
          "uid": false
        },
        {
          "type": "datetime",
          "name": "updatedAt",
          "label": "Updated Date",
          "ui": { "dateFormat": "YYYY-MM-DD" },
          "namespace": ["pages", "updatedAt"],
          "searchable": true,
          "uid": false
        },
        {
          "type": "string",
          "name": "author",
          "label": "Author",
          "required": true,
          "namespace": ["pages", "author"],
          "searchable": true,
          "uid": false
        },
        {
          "type": "string",
          "name": "layout",
          "label": "Layout",
          "options": ["default", "wide", "narrow"],
          "description": "Page layout template",
          "namespace": ["pages", "layout"],
          "searchable": true,
          "uid": false
        },
        {
          "type": "boolean",
          "name": "showToc",
          "label": "Show Table of Contents",
          "description": "Display table of contents for this page",
          "namespace": ["pages", "showToc"],
          "searchable": true,
          "uid": false
        },
        {
          "type": "datetime",
          "name": "lastReviewed",
          "label": "Last Reviewed",
          "ui": { "dateFormat": "YYYY-MM-DD" },
          "namespace": ["pages", "lastReviewed"],
          "searchable": true,
          "uid": false
        },
        {
          "type": "boolean",
          "name": "draft",
          "label": "Draft",
          "description": "Hide this page from public view",
          "namespace": ["pages", "draft"],
          "searchable": true,
          "uid": false
        },
        {
          "type": "object",
          "name": "seo",
          "label": "SEO Settings",
          "fields": [
            {
              "type": "string",
              "name": "title",
              "label": "SEO Title",
              "description": "Override the default title for SEO",
              "namespace": ["pages", "seo", "title"],
              "searchable": true,
              "uid": false
            },
            {
              "type": "string",
              "name": "description",
              "label": "SEO Description",
              "description": "Meta description for search engines",
              "ui": { "component": "textarea" },
              "namespace": ["pages", "seo", "description"],
              "searchable": true,
              "uid": false
            },
            {
              "type": "string",
              "name": "keywords",
              "label": "SEO Keywords",
              "list": true,
              "description": "Keywords for search engines",
              "namespace": ["pages", "seo", "keywords"],
              "searchable": true,
              "uid": false
            },
            {
              "type": "image",
              "name": "ogImage",
              "label": "Open Graph Image",
              "description": "Image for social media sharing",
              "namespace": ["pages", "seo", "ogImage"],
              "searchable": false,
              "uid": false
            }
          ],
          "namespace": ["pages", "seo"],
          "searchable": true,
          "uid": false
        },
        {
          "type": "rich-text",
          "name": "body",
          "label": "Content",
          "isBody": true,
          "namespace": ["pages", "body"],
          "searchable": true,
          "parser": { "type": "mdx" },
          "uid": false
        }
      ],
      "ui": { "filename": { "readonly": false } },
      "namespace": ["pages"]
    }
  ],
  "config": {
    "media": { "tina": { "publicFolder": "public", "mediaRoot": "images" } }
  }
}
