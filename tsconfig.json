{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "esnext"],
    "types": ["vitest/globals", "node"],
    "allowJs": true,
    "skipLibCheck": true,

    // 最严格的类型检查
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitOverride": true,
    "noFallthroughCasesInSwitch": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "alwaysStrict": true,

    // 最严格的代码质量检查
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "exactOptionalPropertyTypes": true,
    "noUncheckedIndexedAccess": true,
    "noPropertyAccessFromIndexSignature": false, // Allow dot notation for better DX (changed from true)
    "allowUnusedLabels": false,
    "allowUnreachableCode": false,

    // 完全禁止any类型 - 零容忍策略
    // noImplicitAny已在strict模式中启用，这里注释说明策略

    // 模块解析
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,

    // 路径映射 - 统一使用单一别名符合规则要求
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },

    // Next.js插件
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": [
    "node_modules",

    // === 开发工具豁免 - 仅开发环境使用，不影响生产代码质量 ===
    // 开发者工具面板和调试插件
    "src/components/dev-tools/**/*.{ts,tsx}",
    "src/app/[locale]/dev-tools/**/*.{ts,tsx}",
    "src/app/[locale]/react-scan-demo/**/*.{ts,tsx}",
    "src/app/[locale]/diagnostics/**/*.{ts,tsx}",
    "src/lib/dev-tools-positioning.ts",
    "src/lib/performance-monitoring-coordinator.ts",
    "src/lib/react-scan-config.ts",

    // 测试文件和测试工具
    "**/__tests__/**/*.{ts,tsx}",
    "**/*.test.{ts,tsx}",
    "**/*.spec.{ts,tsx}",
    "src/test/**/*.{ts,tsx}",
    "src/testing/**/*.{ts,tsx}",
    "tests/**/*.{ts,tsx}",
    "__mocks__/**/*.{ts,tsx,js}",

    // 构建脚本和配置文件
    "scripts/**/*.{ts,js}",
    "config/**/*.{ts,js}",
    "*.config.{ts,js,mjs}",
    "instrumentation*.ts",

    // 开发环境特定常量
    "src/constants/dev-tools.ts",
    "src/constants/test-*.ts"
  ]
}
