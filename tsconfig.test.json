{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    // 测试环境特定的类型定义
    "types": ["vitest/globals", "node", "@testing-library/jest-dom"],

    // 测试文件允许更宽松的类型检查
    "noUnusedLocals": false,
    "noUnusedParameters": false,

    // 测试环境可能需要的额外配置
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    // 类型声明文件（必须包含以获得 MDX 和环境类型）
    "env.d.ts",
    "next-env.d.ts",

    // 包含所有测试文件
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/__tests__/**/*.ts",
    "**/__tests__/**/*.tsx",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "src/test/**/*.ts",
    "src/test/**/*.tsx",
    "src/testing/**/*.ts",
    "src/testing/**/*.tsx",
    "__mocks__/**/*.ts",
    "__mocks__/**/*.tsx",
    "__mocks__/**/*.js",

    // 测试配置文件
    "vitest.config.mts",
    "vitest.config.browser.ts",
    "playwright.config.ts",

    // MDX 内容文件（用于 @content 路径别名解析）
    "content/**/*.mdx",

    // 生成的导入器文件
    "src/lib/mdx-importers.generated.ts",

    // 全局类型声明
    "src/lib/analytics/gtag.d.ts"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "out",
    "build",
    "dist",
    "backups",
    "reports",
    "scripts",
    "coverage",
    "outdated",
    "docs",
    "reports",
    "reports-old",
    "tmp",
    "tmp_reports",
    "analysis",
    "legacy",
    "backups"
  ]
}
